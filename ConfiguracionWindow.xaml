                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="155*" />
                        <ColumnDefinition Width="461*" />
                    </Grid.ColumnDefinitions>
                    <!--  -->
                    <Label x:Name="lblPuerto_1" Content="Puerto:" HorizontalAlignment="Left" Margin="15,49,0,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="32" Width="140"
                           Grid.ColumnSpan="2" />
                    <ComboBox x:Name="cboxScalePort_1"
                              HorizontalAlignment="Left" Margin="125,48,0,0" VerticalAlignment="Top" Width="229"
                              Height="32" Background="White" SelectedIndex="1" FontSize="18" Grid.ColumnSpan="2"
                              FontFamily="Arial" />

                    <!--  -->
                    <Label x:Name="lblFormato_1" Content="Unidades:" HorizontalAlignment="Left" Margin="15,101,0,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="32" Width="140"
                           Grid.ColumnSpan="2" />
                    <ComboBox x:Name="cboxUnidades" HorizontalAlignment="Left" Margin="125,101,0,0"
                              VerticalAlignment="Top" Width="229" Height="32" Background="White" FontSize="18"
                              Grid.ColumnSpan="2" SelectedIndex="0" FontFamily="Arial"
                              SelectionChanged="cboxUnidades_SelectionChanged">
                        <ComboBoxItem Content="lb" />
                        <ComboBoxItem Content="kg" />
                    </ComboBox>

                    <Button x:Name="btnZero_1" Content="ZERO" HorizontalAlignment="Left" Margin="324.345,194,0,0"
                            VerticalAlignment="Top" Width="127" Height="48"
