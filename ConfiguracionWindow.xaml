                    <ComboBox x:Name="cboxPortSeaLevel" HorizontalAlignment="Left" Margin="181,24,0,0"
                              VerticalAlignment="Top" Width="113" Height="32" Background="White" SelectedIndex="1"
                              FontSize="18" FontFamily="Arial" />
                    <Label x:Name="lblInputs" Content="Asignación de Entradas" Margin="26,279,0,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="21.333" Height="35"
                           Foreground="#FF005288" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1"
                           HorizontalAlignment="Left" Width="570" Grid.ColumnSpan="2" />
                    <Label x:Name="lblOutputs" Content="Asignación de Salidas" Margin="0,65,30,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="21.333" Height="35"
                           Foreground="#FF005288" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1"
                           HorizontalAlignment="Right" Width="570" Grid.ColumnSpan="2" />
                    <Label x:Name="lblZebra" Content="Zebra" Margin="0,374,30,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="21.333" Height="35"
                           Foreground="#FF005288" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1"
                           HorizontalAlignment="Right" Width="570" Visibility="Hidden" Grid.ColumnSpan="2" />
                    <Label x:Name="lblPuertoZebra" Content="Nombre de impresora Zebra:" HorizontalAlignment="Left"
                           Margin="30,423,0,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="32" Width="264"
                           Visibility="Hidden" />
                    <Button x:Name="btPrintTest" Content="Test Print" HorizontalAlignment="Left" Margin="195,466,0,0"
                            VerticalAlignment="Top" Width="204" Height="41" IsDefault="True" TabIndex="8"
                            Click="btPrintTest_Click" Visibility="Hidden" Grid.ColumnSpan="2" />
                    <TextBox x:Name="txbZebra" HorizontalAlignment="Left" Margin="294,422,0,0" TextWrapping="Wrap"
                             Text="" VerticalAlignment="Top" Width="256" Height="34" VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center" Visibility="Hidden" Grid.ColumnSpan="2" />
                    <Label x:Name="lblBaudSea" Content="Baudrate Sealevel:" HorizontalAlignment="Left"
                           Margin="315,24,0,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="32" Width="170" Grid.ColumnSpan="2" />
                    <ComboBox x:Name="cboxBaudSea" HorizontalAlignment="Left" Margin="88,24,0,0"
                              VerticalAlignment="Top" Width="126" Height="32" Background="White" SelectedIndex="4"
                              FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                              FontFamily="Arial" Grid.Column="1">
                        <ComboBoxItem Content="9600" />
                        <ComboBoxItem Content="19200" />
                        <ComboBoxItem Content="38400" />
                        <ComboBoxItem Content="57600" />
                        <ComboBoxItem Content="115200" />
                    </ComboBox>
                    <Label Content="PickToLight 0:" HorizontalAlignment="Left" Margin="48,108,0,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="32" Width="167" />
                    <ComboBox x:Name="cboxOutputPick2L0" HorizontalAlignment="Left" Margin="218,108,0,0"
                              VerticalAlignment="Top" Width="99" Height="32" Background="White" FontSize="18"
                              FontFamily="Arial" />
                    <Label Content="Piston:" HorizontalAlignment="Left" Margin="333,108,0,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="32" Width="167" Grid.ColumnSpan="2" />
                    <ComboBox x:Name="cboxOutputPiston" HorizontalAlignment="Left" Margin="111,108,0,0"
                              VerticalAlignment="Top" Width="99" Height="32" Background="White" FontSize="18"
                              FontFamily="Arial" Grid.Column="1" />
                    <ComboBox x:Name="cboxOutputShutOff" HorizontalAlignment="Left" Margin="275,246,0,0"
                              VerticalAlignment="Top" Width="99" Height="32" Background="White" FontSize="18"
                              FontFamily="Arial" Visibility="Hidden" />
                    <Label Content="PickToLight 0:" HorizontalAlignment="Left" Margin="25,336,0,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="32" Width="167" />
                    <ComboBox x:Name="cboxInputPick2L0" HorizontalAlignment="Left" Margin="195,336,0,0"
                              VerticalAlignment="Top" Width="99" Height="32" Background="White" FontSize="18"
                              FontFamily="Arial" />
                    <Label Content="Boton:" HorizontalAlignment="Left" Margin="310,336,0,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="32" Width="167" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" />
                    <ComboBox x:Name="cboxInputBoton" HorizontalAlignment="Left" Margin="88,336,0,0"
                              VerticalAlignment="Top" Width="99" Height="32" Background="White" FontSize="18"
                              FontFamily="Arial" Grid.Column="1" />
                    <CheckBox x:Name="chkBox_Shutoff" Content="Tiene Shutoff" HorizontalAlignment="Left" Margin="30,252,0,0" VerticalAlignment="Top" FontSize="20" VerticalContentAlignment="Center" Width="151" Checked="chkBox_Shutoff_Checked" Unchecked="chkBox_Shutoff_Unchecked"/>
                    <Label x:Name="lblShutOff" Content="ShutOff:" HorizontalAlignment="Left" Margin="191,246,0,0"
                        VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="32" Width="86" Visibility="Hidden" />
                </Grid>
            </TabItem>
            <TabItem Header="Ajustes - Contraseña">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="310" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Grid Contraseña -->
                    <Grid Grid.Row="0" Margin="0,0,0,10" Grid.RowSpan="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="70" />
                                <RowDefinition Height="70*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="200*" />
                            </Grid.ColumnDefinitions>

                            <Label Content="Contraseña" Grid.Column="0" Grid.ColumnSpan="4" Margin="10,8"
                                   FontFamily="Arial" FontSize="21.333" Height="34" Foreground="#FF005288"
                                   FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1"
                                   HorizontalAlignment="Stretch" VerticalAlignment="Center" />

                            <Label Content="Contraseña" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" Margin="0,0" FontFamily="Arial" FontSize="18.667"
                                   Height="32" />
                            <Label Content="*" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"
                                   HorizontalAlignment="Left" Margin="0,11" Foreground="Red" />
                            <PasswordBox Name="txtPassword" PasswordChar="*" Grid.Column="2" Grid.Row="1"
                                         VerticalAlignment="Center" HorizontalAlignment="Left" Width="300" Margin="0,7"
                                         FontSize="24" TabIndex="4" />

                            <Label Content="Nueva Contraseña" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" Margin="0,0" FontFamily="Arial" FontSize="18.667"
                                   Height="32" />
                            <Label Content="*" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"
                                   HorizontalAlignment="Left" Margin="0,11" Foreground="Red" />
                            <PasswordBox Name="txtNewPassword" PasswordChar="*" Grid.Row="2" Grid.Column="2"
                                         VerticalAlignment="Center" HorizontalAlignment="Left" Width="300"
                                         FontSize="24" TabIndex="5" />

                            <Label Content="Confirmación" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" Margin="0,0" FontFamily="Arial" FontSize="18.667"
                                   Height="32" />
                            <Label Content="*" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"
                                   HorizontalAlignment="Left" Margin="0,11" Foreground="Red" />
                            <PasswordBox Name="txtPasswordConfirmation" PasswordChar="*" Grid.Row="4" Grid.Column="3"
                                         VerticalAlignment="Center" HorizontalAlignment="Left" Width="300" Margin="0,7"
                                         FontSize="24" TabIndex="6" />

                            <Border Name="boxSuccess" Visibility="Hidden" Grid.Row="5" Grid.ColumnSpan="3"
                                    Panel.ZIndex="10" Margin="10" Background="#FFB0F7A4" Opacity="0.85"
                                    BorderBrush="#FF063E03" BorderThickness="2" CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="32*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Source="Content/img/icon-checkmark-32.png"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" Width="32"
                                           Height="32" />
                                    <Label Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                           FontSize="24" Foreground="#FF063E03">
                                        Contraseña modificada exitosamente.
                                    </Label>
                                </Grid>
                            </Border>
                            <Label Name="lblSuccess" Visibility="Hidden" Grid.Column="0" Grid.ColumnSpan="3"
                                   Grid.Row="5" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center" Height="30" Background="#FF4ED154">
                                Se Actualizo la Contraseña con exito!
                            </Label>
                            <Button Name="btnChangePassword" Grid.Row="6" Grid.Column="2" Content="Cambiar Contraseña"
                                    HorizontalAlignment="Right" VerticalAlignment="Top" Width="206" Height="48"
                                    Margin="0,10,121,0" TabIndex="7" Click="btnChangePassword_Click" />
                            <TextBox x:Name="txbUser" Grid.Column="2" Text="admin"
                                     VerticalAlignment="Top" HorizontalAlignment="Left" Width="259"
                                     FontSize="24" Margin="150,8,0,0" TextWrapping="Wrap" TextAlignment="Center" />
                            <Label Content="User:" Grid.Column="2" VerticalAlignment="Center"
                                HorizontalAlignment="Left" Margin="98,0,0,0" FontFamily="Arial" FontSize="18.667"
                                Height="32" />
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Camara Vision">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Camara IV4" Grid.Column="0" Margin="0,0,20,0"
                           FontFamily="Arial" FontSize="21.333" Height="34" Foreground="#FF005288"
                           FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1"
                           VerticalAlignment="Top" />
                    <Label Content="IP de la camara:" Grid.Column="0" VerticalAlignment="Top"
                           HorizontalAlignment="Right" Margin="0,52,470,0" FontFamily="Arial" FontSize="18.667"
                           Height="32" />
                    <TextBox x:Name="txbIPCamara"
                             VerticalAlignment="Top" HorizontalAlignment="Left" Width="203" Margin="161,52,0,0"
                             FontSize="24" TabIndex="1" TextAlignment="Center" />
                    <Button x:Name="btnProbarCamara" Content="Trigger Camara"
                            HorizontalAlignment="Left" VerticalAlignment="Top" Width="206" Height="48"
                            Margin="212,243,0,0" TabIndex="5" Click="btnProbarCamara_Click" />
                    <Label Content="Resultado:" HorizontalAlignment="Center" Margin="0,294,0,0"
                        VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="33" Width="102"
                        RenderTransformOrigin="0.514,2.328" />
                    <Label x:Name="lblResultadoVision" Content="" HorizontalAlignment="Left" Margin="24,331,0,0"
                        VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="216" Width="582"
                        RenderTransformOrigin="0.514,2.328" Background="White" />
                    <TextBox x:Name="txbPrograma"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Margin="26,158,0,0"
                        FontSize="24" TabIndex="3" />
                    <Button x:Name="btnCambiarPrograma" Content="Cambiar programa"
                        HorizontalAlignment="Left" VerticalAlignment="Top" Width="169" Height="61"
                        Margin="400,127,0,0" TabIndex="4" Click="btnCambiarPrograma_Click" />
                    <Label Content="Número del programa(000): " VerticalAlignment="Top"
                        HorizontalAlignment="Left" Margin="24,121,0,0" FontFamily="Arial" FontSize="18.667"
                        Height="32" Width="255" />
                    <Label Content="Puerto:" Grid.Column="0" VerticalAlignment="Top"
                        HorizontalAlignment="Right" Margin="0,52,155,0" FontFamily="Arial" FontSize="18.667"
                        Height="32" />
                    <TextBox x:Name="txbPuerto"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Width="143" Margin="463,53,0,0"
                        FontSize="24" TabIndex="2" TextAlignment="Center" />
                </Grid>
            </TabItem>
        </TabControl>

        <Button x:Name="btnCancel" Content="Cancelar" HorizontalAlignment="Right" Margin="0,0,22,10"
                VerticalAlignment="Bottom" Width="158" Height="48" Grid.Row="2" IsCancel="True"
