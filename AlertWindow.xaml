<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
    x:Class="Scale_Program.AlertWindow"
    Title="AlertWindow" Height="510" Width="810" Background="Green" WindowStyle="None" MinWidth="610"
    MinHeight="310" MaxWidth="810" MaxHeight="510" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
    Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="ButtonFocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" SnapsToDevicePixels="true"
                                   Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                   StrokeThickness="1" StrokeDashArray="1 2" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <LinearGradientBrush x:Key="ButtonNormalBackground" EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="#F3F3F3" Offset="0" />
            <GradientStop Color="#EBEBEB" Offset="0.5" />
            <GradientStop Color="#DDDDDD" Offset="0.5" />
            <GradientStop Color="#CDCDCD" Offset="1" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="ButtonNormalBorder" Color="#FF707070" />
        <Style x:Key="MyButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource ButtonFocusVisual}" />
            <Setter Property="Background" Value="{StaticResource ButtonNormalBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource ButtonNormalBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Themes:ButtonChrome x:Name="Chrome" BorderBrush="{TemplateBinding BorderBrush}"
                                             Background="{TemplateBinding Background}"
                                             RenderMouseOver="{TemplateBinding IsMouseOver}"
                                             RenderPressed="{TemplateBinding IsPressed}"
                                             RenderDefaulted="{TemplateBinding IsDefaulted}" SnapsToDevicePixels="true"
                                             Opacity="0.95">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}" RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Themes:ButtonChrome>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter Property="RenderDefaulted" TargetName="Chrome" Value="true" />
                            </Trigger>
                            <Trigger Property="ToggleButton.IsChecked" Value="true">
                                <Setter Property="RenderPressed" TargetName="Chrome" Value="true" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#ADADAD" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="grdAlertWindow" VerticalAlignment="Center" Background="White" HorizontalAlignment="Center"
          Height="500" Width="800">
        <Image x:Name="ImgAlerta" Stretch="Fill" HorizontalAlignment="Center" Source="Content/img/icon_alert.png"
               VerticalAlignment="Center" Width="273" Height="244" Margin="169,31,164,31"
               RenderTransformOrigin="0.502,0.459" Opacity="0.25" />
        <Button x:Name="btnReset" HorizontalAlignment="Left" Margin="10,415,0,0" VerticalAlignment="Top" Width="204"
                Height="75"
                Background="White" Click="OnResetButtonClick" Opacity="0.75" Style="{DynamicResource MyButtonStyle}"
                BorderBrush="#FFC9C9C9">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="16"
                       FontWeight="Bold">
                <Run Text="RESET" /><LineBreak /><Run Text="Reiniciar Secuencia" />
            </TextBlock>
        </Button>
        <Button x:Name="btnContinuar" HorizontalAlignment="Left" Margin="586,415,0,0" VerticalAlignment="Top"
                Width="204" Height="75"
                Background="White" Click="OnContinueButtonClick" Opacity="0.75" BorderBrush="#FFC9C9C9">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="16"
                       FontWeight="Bold">
                <Run Text="CAMBIO DE BIN" /><LineBreak /><Run Text="Continuar Secuencia" />
            </TextBlock>
        </Button>
        <Label x:Name="lblAlert" Content="ALERTA!" HorizontalAlignment="Center" Margin="0,31,0,0"
               VerticalAlignment="Top"
               Width="588" Height="56" FontSize="36" FontWeight="Bold" HorizontalContentAlignment="Center" />
        <Label x:Name="lblSecuencia" Content="SECUENCIA EQUIVOCADA" HorizontalAlignment="Center" Margin="0,92,0,0"
               VerticalAlignment="Top" Width="541" Height="56" FontSize="30" FontWeight="Bold"
               HorizontalContentAlignment="Center" />
        <Label x:Name="lblPesoMin" Visibility="Hidden" Content="Peso Min:" HorizontalAlignment="Left"
               Margin="35,139,0,0"
               VerticalAlignment="Top" Width="200" Height="56" FontSize="22" FontWeight="SemiBold"
               Background="{x:Null}" />
        <Label x:Name="lblPesoMax" Visibility="Hidden" Content="Peso Max:" HorizontalAlignment="Left"
               Margin="369,139,0,0"
               VerticalAlignment="Top" Width="200" Height="56" FontSize="22" FontWeight="SemiBold"
               Background="{x:Null}" />
        <Label x:Name="lblPesoActual" Visibility="Hidden" Content="Peso Actual:" HorizontalAlignment="Center"
               Margin="0,195,0,0"
               VerticalAlignment="Top" Width="512" Height="56" FontSize="22" FontWeight="SemiBold"
               Background="{x:Null}" HorizontalContentAlignment="Center" />
        <Label x:Name="lblProceso" Content="-" HorizontalAlignment="Center" Margin="0,234,0,0"
               VerticalAlignment="Top" Width="780" Height="100" FontSize="40" FontWeight="Bold"
               HorizontalContentAlignment="Center" />
    </Grid>
</Window>