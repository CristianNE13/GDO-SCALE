<Window x:Class="Scale_Program.ErrorMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageBoxWindow" SizeToContent="Height" Width="410" WindowStyle="None" ResizeMode="NoResize"
        Background="#FFF5E5E5" BorderBrush="#FFDE0505" Height="266" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="0,0,0,179">
        <Grid HorizontalAlignment="Stretch" Height="35" VerticalAlignment="Top" Width="Auto" Background="#FFDE0505">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="64" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Name="lblTitle" Margin="10,0,0,0" Grid.Column="0" Grid.ColumnSpan="2" Content="Title" FontSize="20"
                   Height="Auto" Width="Auto" HorizontalAlignment="Stretch" Foreground="White" />

        </Grid>
        <Button Name="btnAccept" Content="Aceptar" HorizontalAlignment="Right" Height="47" Margin="0,0,21,-154"
                VerticalAlignment="Bottom" Width="113" RenderTransformOrigin="0.507,0.841" Background="#FFDE0505"
                BorderBrush="#FFDE0505" IsDefault="True" Foreground="White" BorderThickness="0"
                Click="OnAcceptButtonClick" />
        <TextBlock Name="txtMessage" HorizontalAlignment="Left" Margin="55,65,0,0" TextWrapping="Wrap"
                   Text="TextBlock" VerticalAlignment="Top" Height="124" Width="334"
                   TextAlignment="Justify" Foreground="#FF810000" FontFamily="Arial" />
        <Image HorizontalAlignment="Left" Height="22" Margin="20,62,0,0" VerticalAlignment="Top" Width="22"
               Source="Content/img/icon-alert-32.png" Stretch="Fill" />
    </Grid>
</Window>