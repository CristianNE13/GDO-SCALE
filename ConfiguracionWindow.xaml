                    <!-- Scale comm log -->
                    <Label x:Name="lblLectura_1" Content="Lectura:" HorizontalAlignment="Left" Margin="15,162,0,0"
                           VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="32" Width="175"
                           Grid.ColumnSpan="2" />
                    <ListBox Name="listLogEntries_1" HorizontalAlignment="Left" Height="310" Margin="18,194,0,0"
                             VerticalAlignment="Top" Width="451" FontFamily="Courier New" FontSize="12"
                             Grid.ColumnSpan="2" />
                    <Button x:Name="btnConectar" Content="Conectar" HorizontalAlignment="Left" Margin="325,456,0,0"
                            VerticalAlignment="Top" Width="127" Height="48"
                            Background="#FFF9F9F9" Grid.Column="1" Click="btnConectar_Click" FontSize="18" />
                    <Label Content="Marca:" HorizontalAlignment="Left"
