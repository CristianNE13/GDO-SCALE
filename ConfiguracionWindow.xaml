                        VerticalAlignment="Top" FontFamily="Arial" FontSize="18.667" Height="32" Width="69" Grid.Column="1" />
                    <ComboBox x:Name="cboxMarca" HorizontalAlignment="Left" Margin="280,49,0,0"
                        VerticalAlignment="Top" Width="162" Height="32" Background="White" SelectedIndex="4"
                        FontSize="18" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                        FontFamily="Arial" Grid.Column="1">
                        <ComboBoxItem Content="GFC" />
                        <ComboBoxItem Content="Pennsylvania" />
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="SeaLevel">
