        <Button x:Name="btnSave" Content="Guardar" HorizontalAlignment="Right" Margin="0,0,202,10"
                VerticalAlignment="Bottom" Width="158" Height="48" Grid.Row="2" IsDefault="True"
                Click="OnSaveButtonClick" TabIndex="8" />
    </Grid>


</Window>