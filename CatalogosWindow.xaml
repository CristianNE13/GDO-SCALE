<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Scale_Program.Catalogos"
    Title="Catálogos" Height="768" Width="1280" WindowState="Maximized">
    <Grid>
        <!-- Barra superior -->
        <Grid Height="70" VerticalAlignment="Top" Background="#FF005288">
            <Label Content="PARTS PRESENCE" HorizontalAlignment="Left" Margin="10,10,0,0"
                   VerticalAlignment="Top" Height="54" FontFamily="Open Sans" FontSize="33.333" Width="293"
                   FontWeight="Bold" Foreground="White" />
            <Label Content="| Catálogos" Margin="308,10,696,0" VerticalAlignment="Top"
                   Height="54" FontFamily="Open Sans" FontSize="33.333" Foreground="White" />
        </Grid>

        <!-- Control de pestañas -->
        <TabControl x:Name="tabControl" Margin="0,70,0,0" Background="#FFE5E5E5">
            <!-- Pestaña de Modelos -->
            <TabItem Header="Modelos" FontSize="16">
                <Grid Background="#FFEFEFEF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="107*" />
                        <ColumnDefinition Width="1168*" />
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="ModeloDataGrid" Margin="10,224,10,10" AutoGenerateColumns="False" FontSize="16"
                              HorizontalGridLinesBrush="#FFEFEFEF" VerticalGridLinesBrush="#FF888888"
                              CanUserAddRows="False" Background="White" AlternatingRowBackground="#FFEFEFEF"
                              Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding NoModelo}" Header="NoModelo" />
                            <DataGridTextColumn Binding="{Binding ModProceso}" Header="ModProceso" />
                            <DataGridTextColumn Binding="{Binding Descripcion}" Header="Descripción" />
                            <DataGridCheckBoxColumn Binding="{Binding UsaBascula1}" Header="Usa bascula 1" />
                            <DataGridCheckBoxColumn Binding="{Binding UsaPick2Light}" Header="Usa Pick2Light" />
                            <DataGridCheckBoxColumn Binding="{Binding UsaCamaraVision}" Header="Usa camara de vision" />
                            <DataGridTextColumn Binding="{Binding ProgramaVision}" Header="Programa camara" />
                            <DataGridTextColumn Binding="{Binding Etapa1}" Header="Etapa 1" />
                            <DataGridCheckBoxColumn Binding="{Binding Activo}" Header="Activo" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label x:Name="lblNumeroVision" Content="Numero de programa(000):" Grid.Column="1"
                           Margin="564,57,397,0" VerticalAlignment="Top" RenderTransformOrigin="0.494,1.175"
                           Visibility="Hidden" />
                    <Label Content="Modelo:" Margin="16,10,958,0" VerticalAlignment="Top" Grid.ColumnSpan="2" />
                    <TextBox x:Name="NoModeloTBox" Height="28" Margin="81,12,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="190" TabIndex="1" Grid.ColumnSpan="2" />
                    <Label Content="Descripción:" Margin="385,10,658,0" VerticalAlignment="Top" Grid.Column="1" />
                    <Button x:Name="ModeloAgregarBtn" Content="Agregar" Margin="234,176,808,0"
                            VerticalAlignment="Top" Width="126" Height="28" Background="#FF53AB3B" Foreground="White"
                            Click="ModeloAgregarBtn_Click" Grid.Column="1" TabIndex="4" />
                    <Button x:Name="ModeloEliminarBtn" Content="Eliminar" Margin="468,176,574,0"
                            VerticalAlignment="Top" Width="126" Height="28" Background="#FFCD3030" Foreground="White"
                            Click="ModeloEliminarBtn_Click" Grid.Column="1" TabIndex="5" />
                    <Label Content="ModProceso:" Margin="176,11,886,0" VerticalAlignment="Top" Grid.Column="1" />
                    <TextBox x:Name="tbxProcesoModelo" Height="28" Margin="277,12,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="95" Grid.Column="1" TabIndex="2" />
                    <Button x:Name="BtnGuardarModelos" Content="Guardar Cambios" Margin="674,176,352,0"
                            VerticalAlignment="Top" Height="28" Background="#FF0077D4" Foreground="White"
                            Grid.Column="1" Click="BtnGuardarModelos_Click" Width="140" TabIndex="6" />
                    <Label Content="Usa bascula 1:" Grid.Column="1" Margin="16,57,1037,0" VerticalAlignment="Top" />
                    <CheckBox x:Name="ckb_Bascula1" Grid.Column="1" Content="" HorizontalAlignment="Left"
                              Margin="124,67,0,0" VerticalAlignment="Top" Height="16" Width="17"
                              Checked="ckb_Bascula1_Checked" Unchecked="ckb_Bascula1_Unchecked" IsChecked="False" />
                    <Label Content="Usa bascula 2:" Margin="543,49,502,0" VerticalAlignment="Top" Grid.Column="1"
                           Visibility="Hidden" />
                    <Label x:Name="lblConteoCajas" Content="Usa conteo cajas:" Margin="152,49,862,0"
                           VerticalAlignment="Top" RenderTransformOrigin="0.543,0.616" Grid.Column="1"
                           Visibility="Hidden" />
                    <CheckBox x:Name="ckb_ConteoCajas" Grid.Column="1" Content="" HorizontalAlignment="Left"
                              Margin="285,59,0,0" VerticalAlignment="Top" Height="16" Width="20"
                              Checked="ckb_ConteoCajas_Checked" Visibility="Hidden"
                              Unchecked="ckb_ConteoCajas_Unchecked" />
                    <Label x:Name="lblCantidad" Content="Cantidad:" Margin="309,49,705,0" VerticalAlignment="Top"
                           RenderTransformOrigin="0.543,0.616" Grid.Column="1" Visibility="Hidden" />
                    <TextBox x:Name="txb_CantidadCajas" Height="28" Margin="385,49,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="83" Grid.Column="1"
                             Visibility="Hidden" />
                    <Label x:Name="lblUltimoEtapa1" Content="Último artículo de báscula 1:" Margin="15,86,933,0"
                           VerticalAlignment="Top" RenderTransformOrigin="0.543,0.616" Grid.Column="1"
                           Visibility="Hidden" />
                    <TextBox x:Name="txb_Etapa1" Height="28" Margin="234,89,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="245" Grid.Column="1"
                             Visibility="Hidden" />
                    <Label x:Name="lblUltimoEtapa2" Content="Ultimo artículo de báscula 2:" Margin="675,49,280,0"
                           VerticalAlignment="Top" RenderTransformOrigin="0.543,0.616" Grid.Column="1"
                           Visibility="Hidden" />
                    <Label x:Name="lblPrimerEtapa2" Content="Primer artículo de báscula 2:" Margin="543,86,412,0"
                           VerticalAlignment="Top" RenderTransformOrigin="0.543,0.616" Grid.Column="1"
                           Visibility="Hidden" />
                    <CheckBox x:Name="ckb_Bascula2" Grid.Column="1" Content="" HorizontalAlignment="Left"
                              Margin="653,59,0,0" VerticalAlignment="Top" Height="16" Width="17"
                              Checked="ckb_Bascula2_Checked" Unchecked="ckb_Bascula2_Unchecked" Visibility="Hidden" />
                    <TextBox x:Name="txb_Etapa1Bascula2" Height="28" Margin="887,49,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="206" Grid.Column="1"
                             Visibility="Hidden" />
                    <TextBox x:Name="txb_Etapa2" Height="28" Margin="755,89,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="206" Grid.Column="1"
                             Visibility="Hidden" />
                    <TextBox x:Name="ModeloDescripcionTBox" Height="28" Margin="482,12,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="374" Grid.Column="1" TabIndex="3" />
                    <Label Content="Usa Pick2Light:" Grid.Column="1" Margin="194,56,855,0" VerticalAlignment="Top" />
                    <CheckBox x:Name="ckb_Pick2Light" Grid.Column="1" Content="" HorizontalAlignment="Left"
                              Margin="308,66,0,0" VerticalAlignment="Top" Height="16" Width="17" />
                    <Label Content="Usa Camara de Vision:" Grid.Column="1" Margin="367,56,632,0"
                           VerticalAlignment="Top" />
                    <CheckBox x:Name="ckb_CamaraVision" Grid.Column="1" Content="" HorizontalAlignment="Left"
                              Margin="531,67,0,0" VerticalAlignment="Top" Height="16" Width="17"
                              Checked="ckb_CamaraVision_Checked" Unchecked="ckb_CamaraVision_Unchecked" />
                    <TextBox x:Name="txbProgramaVision" Height="28" Margin="775,61,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="186" TabIndex="3" Grid.Column="1"
                             Visibility="Hidden" />
                </Grid>
            </TabItem>
            <!-- Pestaña de Artículos -->
            <TabItem Header="Artículos" FontSize="16">
                <Grid Background="#FFEFEFEF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="53*" />
                        <ColumnDefinition Width="1221*" />
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="ArticuloDataGrid" Margin="10,161,10,10" AutoGenerateColumns="False" FontSize="16"
                              HorizontalGridLinesBrush="#FFEFEFEF" VerticalGridLinesBrush="#FF888888"
                              CanUserAddRows="False" Background="{x:Null}" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding NoParte}" Header="No Parte" />
                            <DataGridTextColumn Binding="{Binding ModProceso}" Header="ModProceso" />
                            <DataGridTextColumn Binding="{Binding Proceso}" Header="Proceso" />
                            <DataGridTextColumn Binding="{Binding Paso}" Header="Paso" />
                            <DataGridTextColumn Binding="{Binding Descripcion}" Header="Descripción" />
                            <DataGridTextColumn Binding="{Binding PesoMin}" Header="Peso Mínimo" />
                            <DataGridTextColumn Binding="{Binding PesoMax}" Header="Peso Máximo" />
                            <DataGridTextColumn Binding="{Binding Cantidad}" Header="Cantidad" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label Content="No Artículo" Margin="6,10,1074,0" VerticalAlignment="Top" Grid.ColumnSpan="2" />
                    <TextBox x:Name="NoArticuloTbox" Height="28" Margin="10,41,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="165" Grid.ColumnSpan="2" TabIndex="1" />
                    <Label Content="Descripción" Margin="390,10,453,0" VerticalAlignment="Top" Grid.Column="1" />
                    <TextBox x:Name="ArticuloDescripcionTbox" Height="28" Margin="394,41,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="374" Grid.Column="1" TabIndex="4" />
                    <Label Content="Peso Mínimo(kg)" Margin="777,10,305,0" VerticalAlignment="Top" Grid.Column="1" />
                    <TextBox x:Name="ArticuloPesoMinTbox" Height="28" Margin="788,41,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="110" Grid.Column="1" TabIndex="5" />
                    <Label Content="Peso Máximo(kg)" Margin="909,10,179,0" VerticalAlignment="Top" Grid.Column="1" />
                    <TextBox x:Name="ArticuloPesoMaxTbox" Height="28" Margin="917,41,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="110" Grid.Column="1" TabIndex="6" />
                    <Button x:Name="ArticuloNuevoBtn" Content="Agregar" Margin="523,103,572,0"
                            VerticalAlignment="Top" Width="126" Height="28" Background="#FF0077D4" Foreground="White"
                            Click="ArticuloNuevoBtn_Click" Grid.Column="1" TabIndex="11" />
                    <Button x:Name="ArticuloEliminarBtn" Content="Eliminar" Margin="352,103,743,0"
                            VerticalAlignment="Top" Width="126" Height="28" Background="#FFCD3030" Foreground="White"
                            Grid.Column="1" Click="ArticuloEliminarBtn_Click" TabIndex="10" />
                    <Label Content="Proceso" Margin="299,10,844,0" VerticalAlignment="Top" Grid.Column="1" />
                    <TextBox x:Name="txbProceso" Height="28" Margin="289,41,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="88" Grid.Column="1" TabIndex="3" />
                    <TextBox x:Name="txbPaso" Height="28" Margin="1057,41,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="110" Grid.Column="1" TabIndex="7" />
                    <Label Content="Numero de paso" Margin="1047,10,30,0" VerticalAlignment="Top" Grid.Column="1" />
                    <Button x:Name="btnGuardarArticulos" Content="Guardar Cambios" Margin="685,103,406,0"
                            VerticalAlignment="Top" Height="28" Background="#FF68D400" Foreground="White"
                            Grid.Column="1" Width="130" TabIndex="12" Click="btnGuardarArticulos_Click" />
                    <Label Content="ModProceso" Margin="147,10,951,0" VerticalAlignment="Top" Grid.Column="1" />
                    <TextBox x:Name="txbModProceso" Height="28" Margin="137,41,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="133" Grid.Column="1" TabIndex="2" />
                    <Label Content="Cantidad" Margin="6,72,1074,0" VerticalAlignment="Top" Grid.ColumnSpan="2" />
                    <TextBox x:Name="txbCantidad" Height="28" Margin="10,103,0,0" VerticalAlignment="Top"
                             FontSize="18.667" HorizontalAlignment="Left" Width="165" Grid.ColumnSpan="2" TabIndex="8" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>